{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "rootDir": "src",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "typeAcquisition": {
    "enable": true,
    "enableAutoDiscovery": true
  }
}
